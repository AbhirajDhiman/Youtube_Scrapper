
# YouTube Channel Discovery Tool Configuration

# Required: YouTube Data API v3 Key from Google Cloud Console
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_youtube_api_key_here

# Flask Configuration
SESSION_SECRET=your_secure_random_string_here
PORT=5000

# Optional: MongoDB Configuration (leave blank to use session storage only)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DATABASE=youtube_discovery

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
